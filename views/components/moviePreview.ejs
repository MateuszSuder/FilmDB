<div class="movie-info">
	<%- include('favorite') %>
	<a
		class="header-primary movie-title"
		data-movie-id="<%= movie.id %>"
		href="/movie/<%= movie.id %>"
		><%= movie.title %></a
	>
	<div class="movie-description">
		<div class="key-value">
			<span> gatunek </span>
			<span> <%= movie.genre %> </span>
		</div>
		<div class="key-value">
			<span> kraj produkcji </span>
			<span> <%= movie.productionCountry %> </span>
		</div>
		<div class="key-value">
			<span> rok produkcji </span>
			<span> <%= new Date(movie.productionDate).getFullYear() %> </span>
		</div>
		<div class="key-value">
			<span> data dodania </span>
			<span> <%= movie.dateAdded %> </span>
		</div>
		<div class="key-value">
			<span> re≈ºyser </span>
			<span> <%= movie.director %> </span>
		</div>
	</div>
</div>
