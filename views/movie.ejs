<div id="movie-container">
	<img src="/public/assets/Repair Tool.png" id="movie-modify" />
	<div id="movie-header">
		<div class="header-primary" id="movie-title">
			<%- include('components/favorite') %> <%= movie.title %>
		</div>
		<div class="small-print" id="movie-production-date">
			Dodano: <%= movie.dateAdded %>
		</div>
	</div>
	<div id="movie-description"><%= movie.description%></div>
	<div class="key-value">
		<span> Premiera </span>
		<span> <%= movie.productionDate%> </span>
	</div>
	<div class="key-value">
		<span> Re≈ºyser </span>
		<span> <%= movie.director%> </span>
	</div>
	<div class="key-value">
		<span> Gatunek </span>
		<span> <%= movie.genre%> </span>
	</div>
	<div id="movie-actors">
		<span class="header-primary">Aktorzy</span>
		<ul id="movie-actors-list">
			<% movie.actors.forEach(actor => {%>
			<li data-actor-id="<%= actor.id %>"><%= actor.name %></li>
			<% }) %>
		</ul>
	</div>
</div>
