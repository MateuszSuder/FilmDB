	<span class="header-primary movie-title" data-movie-id="<%= movie.id %>"
		><%= movie.title %></span
	>
	<div class="movie-description">
		<div class="key-value">
			<span> gatunek </span>
			<span> <%= movie.genre %> </span>
		</div>
		<div class="key-value">
			<span> kraj produkcji </span>
			<span> <%= movie.productionCountry %> </span>
		</div>
		<div class="key-value">
			<span> rok produkcji </span>
			<span> <%= movie.productionDate %> </span>
		</div>
		<div class="key-value">
			<span> data dodania </span>
			<span> <%= movie.dateAdded %> </span>
		</div>
